---
import { comicList } from "../../data/comiclist";
import MainGridLayout from "../../layouts/MainGridLayout.astro";
import ImageWrapper from "../../components/misc/ImageWrapper.astro";
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";

interface Props {
  Params: {
    id: string;
  };
}

export async function getStaticPaths() {
  return comicList.map((comic) => ({
    params: { id: comic.id },
  }));
}

const { id } = Astro.params;
const comic = comicList.find((item) => item.id === id);

if (!comic) {
  return Astro.redirect("/404");
}

// 获取状态的翻译文本和样式
function getStatusInfo(status: string) {
  switch (status) {
    case "watching":
      return {
        text: i18n(I18nKey.comicStatusWatching),
        class: "bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300",
        icon: "▶",
      };
    case "completed":
      return {
        text: i18n(I18nKey.comicStatusCompleted),
        class: "bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300",
        icon: "✓",
      };
    case "planned":
      return {
        text: i18n(I18nKey.comicStatusPlanned),
        class: "bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-300",
        icon: "⏰",
      };
    default:
      return {
        text: status,
        class: "bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300",
        icon: "?",
      };
  }
}

const statusInfo = getStatusInfo(comic.status);
const progressPercent = comic.totalEpisodes ? (comic.progress / comic.totalEpisodes) * 100 : 0;
---

<MainGridLayout title={comic.title} description={comic.description}>
  <div class="card-base p-6">
    <!-- 返回按钮 -->
    <div class="mb-6">
      <a href="/comic/" class="inline-flex items-center text-[var(--primary)] hover:text-[var(--primary-hover)] transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        {i18n(I18nKey.backtocomiclist)}
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 左侧封面 -->
      <div class="lg:col-span-1">
        <div class="relative overflow-hidden rounded-[var(--radius-large)] shadow-lg">
          <ImageWrapper src={comic.cover} alt={comic.title} class="w-full h-auto object-cover" />

          <!-- 状态标签 -->
          <div class={`absolute top-4 left-4 px-3 py-1.5 rounded-md text-sm font-medium ${statusInfo.class} flex items-center gap-1`}>
            <span>{statusInfo.icon}</span>
            <span>{statusInfo.text}</span>
          </div>

          <!-- 评分 -->
          <div class="absolute top-4 right-4 bg-black/70 text-white px-2 py-1 rounded-md text-sm font-medium flex items-center gap-1">
            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path>
            </svg>
            <span>{comic.rating}</span>
          </div>
        </div>
      </div>

      <!-- 右侧信息 -->
      <div class="lg:col-span-2">
        <h1 class="text-3xl font-bold text-black/90 dark:text-white/90 mb-4">{comic.title}</h1>
        <p class="text-lg text-black/75 dark:text-white/75 mb-6">{comic.description}</p>

        <!-- 基本信息 -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div class="space-y-4">
            <div class="flex justify-between border-b border-[var(--line-divider)] pb-2">
              <span class="text-black/50 dark:text-white/50">{i18n(I18nKey.comicYear)}</span>
              <span class="text-black/90 dark:text-white/90 font-medium">{comic.year}</span>
            </div>
            <div class="flex justify-between border-b border-[var(--line-divider)] pb-2">
              <span class="text-black/50 dark:text-white/50">{i18n(I18nKey.comicAuthor)}</span>
              <span class="text-black/90 dark:text-white/90 font-medium">{comic.studio}</span>
            </div>
            
          </div>

          <div class="space-y-4">
            <div class="flex justify-between border-b border-[var(--line-divider)] pb-2">
              <span class="text-black/50 dark:text-white/50">总卷数</span>
              <span class="text-black/90 dark:text-white/90 font-medium">{comic.episodes}</span>
            </div>
            <div class="flex justify-between border-b border-[var(--line-divider)] pb-2">
              <span class="text-black/50 dark:text-white/50">已看卷数</span>
              <span class="text-black/90 dark:text-white/90 font-medium">{comic.progress}/{comic.totalEpisodes}</span>
            </div>
          </div>
        </div>

        <!-- 进度条 -->
        {
          comic.status === "watching" && (
            <div class="mb-6">
              <div class="flex justify-between items-center mb-2">
                <span class="text-black/75 dark:text-white/75 font-medium">进度</span>
                <span class="text-[var(--primary)] font-bold">{Math.round(progressPercent)}%</span>
              </div>
              <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2.5 overflow-hidden">
                <div
                  class="h-2.5 rounded-full transition-all duration-500"
                  style={`width: ${progressPercent}%; background: linear-gradient(90deg, var(--primary), oklch(from var(--primary) calc(l + 0.1) c calc(h + 30))); box-shadow: 0 0 10px var(--primary)/50;`}
                />
              </div>
            </div>
          )
        }

        <!-- 类型标签 -->
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-black/90 dark:text-white/90 mb-3">类型标签</h3>
          <div class="flex flex-wrap gap-2">
            {
              comic.genre.map((g) => (
                <span class="px-3 py-1.5 bg-[var(--btn-regular-bg)] text-black/75 dark:text-white/75 rounded-md text-sm font-medium">{g}</span>
              ))
            }
          </div>
        </div>

        <!-- 外部链接按钮 -->
        <div class="mt-8">
          <a
            href={comic.link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-[var(--primary)] text-white rounded-lg hover:bg-[var(--primary-hover)] transition-colors"
          >
            在外部链接中打开
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</MainGridLayout>
